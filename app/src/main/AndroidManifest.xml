<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.codeccc.animation">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidAnimationsDemo">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.normal.AnimationActivity"
            android:label="属性动画" />
        <activity
            android:name=".ui.vector.VectorAnimationActivity"
            android:label="可绘制图形动画" />

        <activity
            android:name=".ui.normal.ShowOrHideActivity"
            android:label="使用动画显示隐藏视图" />
        <activity
            android:name=".ui.normal.MoveViewActivity"
            android:label="使用动画移动视图" />
        <activity
            android:name=".ui.fling.FlingActivity"
            android:label="使用Fling动画移动视图" />
        <activity
            android:name=".ui.zoom.ZoomActivity"
            android:label="使用缩放动画放大视图" />
        <activity
            android:name=".ui.spring.SpringActivity"
            android:label="弹簧动画" />
        <activity
            android:name=".ui.layout.AnimateLayoutChangeActivity"
            android:label="自动为布局更新添加动画" />
        <activity
            android:name=".ui.scene.SceneActivity"
            android:label="过渡场景动画" />
        <activity
            android:name=".ui.scene.SceneCustomActivity"
            android:label="创建自定义过渡动画" />
        <activity
            android:name=".ui.transition.TransitionAActivity"
            android:theme="@style/Theme.Transition"
            android:label="使用动画启动Activity" />
        <activity
            android:name=".ui.transition.TransitionBActivity"
            android:label="使用动画启动Activity"
            android:theme="@style/Theme.Transition" />
    </application>

</manifest>